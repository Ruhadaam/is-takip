      <script>
        // Todo'ya tıklama ile checkbox etkileşimi
        document.querySelectorAll('.space-y-2 div').forEach(todoDiv => {
          todoDiv.addEventListener('click', function() {
            const checkbox = this.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
            checkbox.dispatchEvent(new Event('change'));
          });
        });
    
        // Checkbox işaretlendiğinde todo'nun üstünü çizme
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
          checkbox.addEventListener('change', function() {
            if (this.checked) {
              this.nextElementSibling.classList.add('line-through');
            } else {
              this.nextElementSibling.classList.remove('line-through');
            }
          });
        });
      </script>
</div>